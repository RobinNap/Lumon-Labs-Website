---
interface Props {
  title: string;
  tagline: string;
  description: string;
  icon?: string;
  platforms: string[];
  appStoreUrl?: string;
  status?: 'available' | 'coming-soon' | 'beta';
  color?: string;
  href: string;
}

const { 
  title, 
  tagline, 
  description, 
  icon, 
  platforms, 
  appStoreUrl, 
  status = 'available',
  color = '#00d4aa',
  href 
} = Astro.props;

const platformIcons: Record<string, string> = {
  iOS: 'ðŸ“±',
  iPadOS: 'ðŸ“±',
  macOS: 'ðŸ’»',
  watchOS: 'âŒš',
  visionOS: 'ðŸ¥½',
  tvOS: 'ðŸ“º',
};
---

<article class="card-hover group">
  <div class="flex items-start gap-4 mb-4">
    <!-- App Icon -->
    <div 
      class="w-16 h-16 rounded-2xl flex items-center justify-center text-3xl shadow-lg shrink-0 transition-transform group-hover:scale-105"
      style={`background: linear-gradient(135deg, ${color}, ${color}dd); box-shadow: 0 8px 24px ${color}33;`}
    >
      {icon ? (
        <img src={icon} alt={`${title} icon`} class="w-12 h-12 rounded-xl" />
      ) : (
        <span class="text-midnight-950">âœ¦</span>
      )}
    </div>
    
    <div class="flex-1 min-w-0">
      <div class="flex items-center gap-2 mb-1">
        <h3 class="font-display font-bold text-lg text-white truncate">{title}</h3>
        {status === 'coming-soon' && (
          <span class="px-2 py-0.5 text-xs font-medium bg-amber-500/20 text-amber-400 rounded-full">Coming Soon</span>
        )}
        {status === 'beta' && (
          <span class="px-2 py-0.5 text-xs font-medium bg-purple-500/20 text-purple-400 rounded-full">Beta</span>
        )}
      </div>
      <p class="text-accent text-sm font-medium">{tagline}</p>
    </div>
  </div>
  
  <p class="text-midnight-400 text-sm leading-relaxed mb-4 line-clamp-2">
    {description}
  </p>
  
  <div class="flex items-center justify-between">
    <!-- Platforms -->
    <div class="flex items-center gap-1">
      {platforms.map((platform) => (
        <span 
          class="text-sm" 
          title={platform}
          aria-label={platform}
        >
          {platformIcons[platform] || 'ðŸ“±'}
        </span>
      ))}
    </div>
    
    <!-- Actions -->
    <div class="flex items-center gap-2">
      {appStoreUrl && status === 'available' && (
        <a 
          href={appStoreUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-1 px-3 py-1.5 text-sm font-medium bg-white text-midnight-950 rounded-lg hover:bg-midnight-100 transition-colors"
        >
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
          </svg>
          App Store
        </a>
      )}
      <a 
        href={href}
        class="inline-flex items-center gap-1 text-sm text-midnight-400 hover:text-accent transition-colors"
      >
        Learn more
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

