---
const currentYear = new Date().getFullYear();

const footerLinks = {
  explore: [
    { href: '/apps', label: 'Apps' },
    { href: '/about', label: 'About' },
    { href: '/contact', label: 'Contact' },
  ],
  legal: [
    { href: '/privacy', label: 'Privacy' },
    { href: '/support', label: 'Support' },
  ],
};
---

<footer class="relative z-10 border-t border-white/10">
  <div class="max-w-6xl mx-auto px-6 py-16">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12 md:gap-8">
      <!-- Brand -->
      <div class="md:col-span-2">
        <a href="/" class="flex items-center gap-3 mb-4">
          <svg class="w-8 h-8" viewBox="0 0 100 100" fill="none">
            <circle 
              cx="50" 
              cy="50" 
              r="35" 
              stroke="white" 
              stroke-width="8"
              stroke-linecap="round"
            />
          </svg>
          <span class="font-serif text-xl text-white tracking-wide">Lumon Labs</span>
        </a>
        <p class="font-sans text-white/50 text-sm max-w-sm leading-relaxed">
          Building apps that blow your mind. Crafting thoughtful, beautifully designed software for the Apple ecosystem.
        </p>
      </div>

      <!-- Explore Links -->
      <div>
        <h3 class="font-sans font-medium text-white text-sm uppercase tracking-wider mb-4">Explore</h3>
        <ul class="space-y-3">
          {footerLinks.explore.map((link) => (
            <li>
              <a href={link.href} class="font-sans text-white/50 text-sm hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal Links -->
      <div>
        <h3 class="font-sans font-medium text-white text-sm uppercase tracking-wider mb-4">Legal</h3>
        <ul class="space-y-3">
          {footerLinks.legal.map((link) => (
            <li>
              <a href={link.href} class="font-sans text-white/50 text-sm hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-white/10 flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="font-sans text-white/40 text-sm">
        &copy; {currentYear} Lumon Labs. All rights reserved.
      </p>
      
      <div class="flex items-center gap-6">
        <!-- Social links (optional) -->
        <a href="https://twitter.com/lumonlabs" target="_blank" rel="noopener noreferrer" class="text-white/40 hover:text-white transition-colors">
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
        <a href="https://github.com/lumonlabs" target="_blank" rel="noopener noreferrer" class="text-white/40 hover:text-white transition-colors">
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
