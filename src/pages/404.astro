---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found" noIndex={true}>
  <section class="section min-h-[70vh] flex items-center justify-center pt-32">
    <div class="max-w-lg mx-auto px-6 text-center">
      <!-- 404 Display -->
      <div class="relative mb-8">
        <span class="font-serif text-8xl md:text-9xl font-light text-white/20">404</span>
      </div>

      <h1 class="font-serif text-3xl md:text-4xl font-light text-white mb-4">
        Page not found
      </h1>
      
      <p class="font-sans text-white/60 mb-8">
        The page you're looking for doesn't exist or has been moved. 
        Let's get you back on track.
      </p>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="/" class="btn-primary">
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
            <polyline points="9 22 9 12 15 12 15 22"/>
          </svg>
          Back to Home
        </a>
        <a href="/apps" class="btn-secondary">
          Browse Apps
        </a>
      </div>

      <!-- Quick Links -->
      <div class="mt-12 pt-8 border-t border-white/10">
        <p class="font-sans text-sm text-white/40 mb-4">Or try one of these:</p>
        <div class="flex flex-wrap items-center justify-center gap-4 font-sans text-sm">
          <a href="/about" class="text-white/50 hover:text-white transition-colors">About</a>
          <span class="text-white/20">•</span>
          <a href="/contact" class="text-white/50 hover:text-white transition-colors">Contact</a>
          <span class="text-white/20">•</span>
          <a href="/support" class="text-white/50 hover:text-white transition-colors">Support</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
