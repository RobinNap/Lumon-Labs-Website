---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Contact" 
  description="Get in touch with Lumon Labs. We'd love to hear from you."
>
  <!-- Hero -->
  <section class="section pt-32 pb-20">
    <div class="max-w-4xl mx-auto px-6">
      <div class="text-center mb-16">
        <h1 class="font-serif text-5xl md:text-6xl font-light text-white mb-6">
          Get in Touch
        </h1>
        <p class="font-sans text-lg text-white/70 max-w-xl mx-auto leading-relaxed">
          Have a question, feedback, or just want to say hello? 
          We'd love to hear from you.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Options -->
  <section class="section pt-0 pb-32">
    <div class="max-w-4xl mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-6">
        <!-- Email -->
        <a href="mailto:info@lumonlabs.io" class="glass-card p-8 text-center group hover:bg-white/15 transition-all block h-full flex flex-col justify-center">
          <div class="w-14 h-14 mx-auto mb-4 rounded-2xl bg-white/10 flex items-center justify-center group-hover:bg-white/20 transition-colors">
            <svg class="w-7 h-7 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
              <polyline points="22,6 12,13 2,6"/>
            </svg>
          </div>
          <h3 class="font-serif text-xl text-white mb-2">Email Us</h3>
          <p class="font-sans text-white/50 text-sm mb-4">For general inquiries and feedback</p>
          <span class="font-sans text-white/70 text-sm">info@lumonlabs.io</span>
        </a>

        <!-- Support Section -->
        <a href="/support" class="glass-card p-8 text-center group hover:bg-white/15 transition-all block h-full flex flex-col justify-center">
          <div class="w-14 h-14 mx-auto mb-4 rounded-2xl bg-white/10 flex items-center justify-center group-hover:bg-white/20 transition-colors">
            <svg class="w-7 h-7 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"/>
              <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
              <line x1="12" y1="17" x2="12.01" y2="17"/>
            </svg>
          </div>
          <h3 class="font-serif text-xl text-white mb-2">Need Support?</h3>
          <p class="font-sans text-white/50 text-sm mb-4">Having issues with any of our apps?</p>
          <span class="font-sans text-white/70 text-sm">Visit Support â†’</span>
        </a>
      </div>

      <!-- Response Time -->
      <div class="mt-12 text-center">
        <p class="font-sans text-white/40 text-sm">
          We typically respond within 24-48 hours. Thank you for your patience!
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
